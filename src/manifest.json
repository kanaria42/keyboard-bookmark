{
  "name": "keyboard-bookmark",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Bookmark Extension for keyboard controll",
  "icons": {
    "16": "icons/book@16.png",
    "48": "icons/book@48.png",
    "128": "icons/book@128.png"
  },
  "permissions": [
    "bookmarks",
    "tabs",
    "storage"
  ],
  "commands": {
    "toggle-feature": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      },
      "description": "Toggle feature"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}